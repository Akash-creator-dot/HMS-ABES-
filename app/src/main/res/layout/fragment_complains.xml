<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComplainsFragment">
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#1EC1A1"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="COMPLAINS SECTION"
                    android:textSize="30sp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/complainsheadingtxt"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:focusable="true"
                    app:cardCornerRadius="40dp"
                    android:clickable="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/complainselectrician"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/complainselectricianimg"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:src="@drawable/complainselectrician" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/complainselectriciantxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Electrician"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="20dp"
                                android:textSize="30sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:focusable="true"
                    app:cardCornerRadius="40dp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/complainsweeper"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/complainssweeperimg"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:src="@drawable/complainssweeper" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/complainssweepertxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sweeper"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="20dp"
                                android:textSize="30sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="40dp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/complainsarpanter"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/complainsarpanterimg"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:src="@drawable/complainscarpanter" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/complainsarpantertxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Carpanter"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="20dp"
                                android:textSize="30sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="40dp"
                    android:id="@+id/complainplumber"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/complainplumberimg"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:src="@drawable/complainsplumber" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/complainplumbertxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Plumber"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="20dp"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_height="100dp"
                    android:focusable="true"
                    app:cardCornerRadius="40dp"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    android:id="@+id/complainpesticide"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contactrowlayout"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/complainpesticideimg"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:src="@drawable/complainspest" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/complainpesticidetxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pest Control"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="20dp"
                                android:textSize="30sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>
</LinearLayout>
